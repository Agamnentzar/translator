extends pageLayout

block pageContent
	form.form-horizontal(action='', method='post', role='form')
		.form-group
			h2.col-sm-offset-4.col-sm-8 Snapshot Generator
		if error
			.alert.alert-danger=error
		.form-group
			label.col-sm-4.control-label(for='inputTitle') Title
			.col-sm-8
				input#inputTitle.form-control(type='text', name='title', value=generator.title, autocomplete='off', required)
		.form-group
			label.col-sm-4.control-label(for='inputName') Name
			.col-sm-8
				input#inputName.form-control(type='text', name='name', value=generator.name, pattern='\\S+', autocomplete='off', required)
				em.help-block Name used for access by dev tools (no spaces allowed)
		.form-group
			label.col-sm-4.control-label Sets
			.col-sm-8
				each s in sets
					.checkbox
						label
							input(type='checkbox', name='sets[]', value=s.id, checked=generator.sets.indexOf(s.id) !== -1)
							=s.title

		.form-group
			.col-sm-offset-4.col-sm-8
				a.btn.btn-default(href='/snapshots') Cancel
				| 
				button.btn.btn-primary(type='submit') Save