extends pageLayout

block pageContent
	form.form-horizontal(action='', method='post', role='form', enctype='multipart/form-data')
		input(type='hidden', name='id', value=set.id)
		.form-group
			h2.col-sm-offset-4.col-sm-8 Import
		if error
			.alert.alert-danger=error
		.form-group
			label.col-sm-4.control-label(for='inputTitle') Set
			.col-sm-8
				p.form-control-static=set.title
		.form-group
			label.col-sm-4.control-label(for='inputFile') File
			.col-sm-8
				input#inputFile(type='file', name='file', required)
		.alert.alert-warning 
			b Warning! 
			| This action will erase all translations for this set
		.form-group
			.col-sm-offset-4.col-sm-8
				a.btn.btn-default(href='/sets') Cancel
				| 
				button.btn.btn-primary(type='submit') Import