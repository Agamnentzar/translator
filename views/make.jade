extends pageLayout

block pageContent
	form.form-horizontal(action='', method='post', role='form')
		.form-group
			h2.col-sm-offset-4.col-sm-8 Make Snapshot
		if error
			.alert.alert-danger=error
		.form-group
			label.col-sm-4.control-label Title
			.col-sm-8
				p.form-control-static=title
		.form-group
			label.col-sm-4.control-label(for='inputVersion') Version
			.col-sm-8
				input#inputVersion.form-control(type='text', name='version', value='', autocomplete='off', required)

		.form-group
			.col-sm-offset-4.col-sm-8
				a.btn.btn-default(href='/snapshots') Cancel
				| 
				button.btn.btn-primary(type='submit') Make